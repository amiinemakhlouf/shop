<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4A5F4"
    tools:context=".fragments.SettingFragment"


    >

    <com.example.shop.utils.editText
        android:id="@+id/et_fn"
        android:layout_width="277dp"
        android:layout_height="64dp"
        android:layout_marginTop="68dp"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.shop.utils.editText
        android:id="@+id/et_pn"
        android:layout_width="271dp"
        android:layout_height="67dp"
        android:layout_marginTop="116dp"
        android:ems="10"

        android:inputType="textPersonName"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_fn" />

    <com.example.shop.utils.editText
        android:id="@+id/et_adresse"
        android:layout_width="271dp"
        android:layout_height="77dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pn" />

    <com.example.shop.utils.textViewAsset
        android:id="@+id/textView4"
        android:layout_width="124dp"
        android:layout_height="61dp"
        android:layout_marginTop="68dp"
        android:textSize="15dp"
        android:text="name"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/et_fn"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.shop.utils.textViewAsset
        android:id="@+id/textView5"
        android:layout_width="124dp"
        android:layout_height="61dp"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Phone number"
        app:layout_constraintEnd_toStartOf="@+id/et_pn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <com.example.shop.utils.textViewAsset
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="59dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:text="adresse"
        app:layout_constraintEnd_toStartOf="@+id/et_adresse"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <com.example.shop.utils.button
        android:id="@+id/upbutton"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button_backgroud"
        android:text="update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_adresse"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>