<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#040361"

    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <com.example.shop.utils.textViewAsset
        android:id="@+id/textViewAsset"
        android:layout_width="229dp"
        android:layout_height="95dp"
        android:gravity="center"
        android:textColor="#FF0000	"
        android:text="YourShop"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <com.example.shop.utils.textViewAsset
        android:id="@+id/login"
        android:layout_width="133dp"
        android:layout_height="72dp"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="440dp"
        android:gravity="center"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAsset" />

    <com.example.shop.utils.editText
        android:id="@+id/email"
        android:layout_width="353dp"
        android:layout_height="58dp"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="336dp"
        android:ems="10"
        android:hint="Email"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <com.example.shop.utils.editText
        android:id="@+id/psw"
        android:layout_width="353dp"
        android:layout_height="58dp"
        android:layout_marginStart="28dp"
        android:textColor="@color/white"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <com.example.shop.utils.textViewAsset
        android:id="@+id/tv_fp"
        android:layout_width="115dp"
        android:layout_height="38dp"
        android:layout_marginStart="260dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="32dp"

        android:text="Forgot Password?"
        android:textColor="@color/white"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/psw" />

    <com.example.shop.utils.button
        android:id="@+id/tvsign_in"
        android:layout_width="209dp"
        android:layout_height="64dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"

        android:layout_marginTop="124dp"
        android:background="@drawable/button_backgroud"
        android:text="Sign in"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/psw" />

    <com.example.shop.utils.textViewAsset
        android:id="@+id/tv_register"
        android:layout_width="115dp"
        android:layout_height="46dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="160dp"
        android:text="Register now"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_fp"
        app:layout_constraintTop_toBottomOf="@+id/psw" />


</androidx.constraintlayout.widget.ConstraintLayout>